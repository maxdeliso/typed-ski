{
  "extends": "assemblyscript/std/assembly.json",
  "include": ["./**/*.ts"],
  "options": {
    "noAssert": true,
    "sourceMap": true,
    "exportRuntime": false,
    "use": "abort=assembly/index/abort",
    "bindings": "esm",
    "initialMemory": 512,
    "maximumMemory": 65536
  },
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat"
    },
    "release": {
      "outFile": "build/release.wasm",
      "textFile": "build/release.wat",
      "options": {
        "optimizeLevel": 3,
        "shrinkLevel": 2,
        "converge": true,
        "noAssert": true
      }
    }
  }
}
