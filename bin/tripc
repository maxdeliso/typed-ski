#!/bin/bash
# TripLang Compiler CLI wrapper
# This script provides a convenient way to run the tripc compiler

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the TypeScript version with Deno
exec deno run --allow-read --allow-write "$SCRIPT_DIR/tripc.ts" "$@"
