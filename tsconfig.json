{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "./build",
    "declarationDir": "./build",
    "declaration": true,
    "declarationMap": true
  },
}